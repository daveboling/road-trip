extends ../shared/template
block content
      h2 Create New Road Trip
      form(method='post' action='/trips/new')
          .col-xs-3
          .col-xs-3
            .form-group
              label Name
              input.form-control(type='text' name='name' value='Las Vegas 2014')
            .form-group
              label Cash
              input.form-control(type='number' name='cash' value='500')
            .form-group
              label Origin
              input.form-control(type='text' name='origin' value='Nashville')
            .form-group
              label Destination
              input.form-control(type='text' name='destination' value='Las Vegas')
          .col-xs-3
            .form-group
              label Car Photo
              input.form-control(type='file' name='photo')
            .form-group
              label MPG
              input.form-control(type="number" name='mpg' value='35')
            .form-group
              label Begin Date
              input.form-control(type="date" name='begin' value='2014-10-25')
            .form-group
              label End Date
              input.form-control(type="date" name='end' value='2014-11-25')
          .col-xs-3
        button.btn.btn-danger#submit Save Trip!






block scripts