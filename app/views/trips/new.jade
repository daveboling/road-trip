extends ../shared/template
block content
      h2 Create New Road Trip
      form(method='post' action='/trips/new' id='tripForm' enctype='multipart/form-data')
          .col-xs-3
              input#originLat(type='hidden' name='originLat')
              input#originLng(type='hidden' name='originLng')
              input#destLat(type='hidden' name='destLat')
              input#destLng(type='hidden' name='destLng')
              input#distance(type='hidden' name='distance')
          .col-xs-3
            .form-group
              label Name
              input.form-control(type='text' name='name' value='Las Vegas 2014')
            .form-group
              label Cash
              input.form-control(type='number' name='cash' value='500')
            .form-group
              label Origin
              input.form-control#originName(type='text' name='originName' value='Nashville')
            .form-group
              label Destination
              input.form-control#destName(type='text' name='destName' value='Las Vegas')
          .col-xs-3
            .form-group
              label Car Photo
              input.form-control(type='file' name='photo' multiple=false)
            .form-group
              label MPG
              input.form-control(type="number" name='mpg' value='35')
            .form-group
              label Begin Date
              input.form-control(type="date" name='begin' value='2014-10-25')
            .form-group
              label End Date
              input.form-control(type="date" name='end' value='2014-11-25')
          .col-xs-3
          .row
            .col-xs-4
            .col-xs-4
              label Gas Price/Gallon
              input.form-control(type='number' name='gasPrice' value='3.50')
            .col-xs-4

        button(type='submit' form='tripForm').btn.btn-danger#submit Save Trip!

block scripts
  script(src='/js/user/new.js')
