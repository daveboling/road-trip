extends ../shared/template
block content
    h2 #{stop.name} Events
    .row
      .col-xs-6
        ul
          each evnt in stop.events
            li= evnt
      .col-xs-6
        form(method='post' id='events' actions='/trips/#{tripID}/stop/#{stop._id}')
          button(tyoe='button').btn.btn-success.full Add More Events
          .form-group.event
            label Add Event(s)
            input.form-control(type='text' name='event')
    .row
      .col-xs-6
        #photos
      .col-xs-6
        form(method='post' id='eventPhotos' actions='/trips/#{tripID}/stop/#{stop._id}' enctype='multipart/form-data')
          .form-group
            label Add Photos
            input(type='file' name='photos' multiple=true)
          button(type='submit' form='events').btn.btn-primary.full Submit

